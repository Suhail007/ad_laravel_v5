{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --no-interaction --prefer-dist --optimize-autoloader --no-dev"
  },
  "deploy": {
    "startCommand": "php artisan migrate --force",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "environment": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_KEY": {
      "generator": "php -r \"echo 'base64:'.base64_encode(random_bytes(32)).PHP_EOL;\""
    },
    "APP_URL": "https://${RAILWAY_PUBLIC_DOMAIN}",
    "ASSET_URL": "https://${RAILWAY_STATIC_URL}",
    "LOG_CHANNEL": "stderr",
    "LOG_LEVEL": "info",
    "DB_CONNECTION": "mysql",
    "DB_HOST": "${MYSQLHOST}",
    "DB_PORT": "${MYSQLPORT}",
    "DB_DATABASE": "${MYSQLDATABASE}",
    "DB_USERNAME": "${MYSQLUSER}",
    "DB_PASSWORD": "${MYSQLPASSWORD}",
    "CACHE_DRIVER": "file",
    "SESSION_DRIVER": "file",
    "SESSION_LIFETIME": "120",
    "QUEUE_CONNECTION": "sync"
  }
}

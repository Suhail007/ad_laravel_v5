{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --no-dev"
  },
  "deploy": {
    "startCommand": "php artisan storage:link && php artisan optimize:clear && php artisan optimize",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_KEY": {
      "description": "Application encryption key (run 'php artisan key:generate --show' to generate one)",
      "required": true
    },
    "APP_URL": {
      "description": "The URL of your application",
      "value": "https://${RAILWAY_PUBLIC_DOMAIN}",
      "required": false
    },
    "DB_CONNECTION": "pgsql",
    "DB_HOST": "${DATABASE_URL_HOST}",
    "DB_PORT": "${DATABASE_URL_PORT}",
    "DB_DATABASE": "${DATABASE_URL_DB}",
    "DB_USERNAME": "${DATABASE_URL_USER}",
    "DB_PASSWORD": "${DATABASE_URL_PASSWORD}",
    "CACHE_DRIVER": "file",
    "SESSION_DRIVER": "file",
    "SESSION_LIFETIME": "120",
    "QUEUE_CONNECTION": "sync"
  }
}
